<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AdminDoctorsFragment"
    android:background="#D4E1E3">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/buttonAll"
                android:layout_width="45dp"
                android:layout_height="33dp"
                android:layout_margin="1dp"
                android:text="All"
                android:textSize="3sp" />

            <Button
                android:id="@+id/buttonDentists"
                android:layout_width="59dp"
                android:layout_height="33dp"
                android:layout_margin="1dp"
                android:text="Dentists"
                android:textSize="4sp" />

            <Button
                android:id="@+id/buttonDermatologist"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_margin="1dp"
                android:text="Dermatologists"
                android:textSize="4sp" />

            <Button
                android:id="@+id/buttonGynaecologist"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_margin="1dp"
                android:text="Gynaecologists"
                android:textSize="4sp" />

            <Button
                android:id="@+id/buttonOptometrist"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_margin="1dp"
                android:text="Optometrists"
                android:textSize="4sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonAddDoctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_add"
                android:pointerIcon="hand"
                android:text="Add Doctor"
                android:textColor="#000000" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</ScrollView>